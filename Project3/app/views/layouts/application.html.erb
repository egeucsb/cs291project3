<!DOCTYPE html>
<html>
  <head>
    <title>MyRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav>
      <%= link_to 'Home', root_path %>
      <% if logged_in? %>
        <%= link_to 'New Post', new_post_path %>
        <%= link_to 'Logout', logout_path, method: :delete, data: { confirm: 'Are you sure you want to logout?' } %>
      <% else %>
        <%= link_to 'Login', login_path %>
      <% end %>
    </nav>

    <!-- Flash Messages -->
    <div class="container">
      <% if flash[:notice] %>
        <div class="flash notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash alert">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
